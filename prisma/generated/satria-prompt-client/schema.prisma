generator satriaClient {
  provider = "prisma-client-js"
  output   = "../prisma/generated/satria-prompt-client"
}

datasource satria {
  provider = "sqlserver"
  url      = env("DATABASE_URL_SATRIA_PROMPT")
}

model activity_logs {
  id          Int       @id(map: "PK_activity_logs") @default(autoincrement())
  user_id     Int?
  action      String?   @satria.VarChar(255)
  description String?   @satria.VarChar(Max)
  ip_address  String?   @satria.VarChar(50)
  user_agent  String?   @satria.VarChar(Max)
  created_at  DateTime? @satria.DateTime
}

model error_logs {
  id          Int       @id(map: "PK_error_logs") @default(autoincrement())
  message     String?   @satria.VarChar(Max)
  stack_trace String?   @satria.VarChar(Max)
  code        String?   @satria.VarChar(50)
  method      String?   @satria.VarChar(10)
  url         String?   @satria.VarChar(Max)
  params      String?   @satria.VarChar(Max)
  query       String?   @satria.VarChar(Max)
  body        String?   @satria.VarChar(Max)
  headers     String?   @satria.VarChar(Max)
  user_id     Int?
  ip_address  String?   @satria.VarChar(100)
  created_at  DateTime? @satria.DateTime
}

model ms_group_products {
  id                        Int       @id(map: "PK_ms_group_products") @default(autoincrement())
  group_product_name        String?   @satria.VarChar(255)
  group_product_description String?   @satria.VarChar(Max)
  created_by                Int?
  updated_by                Int?
  deleted_by                Int?
  created_at                DateTime? @satria.DateTime
  updated_at                DateTime? @satria.DateTime
  deleted_at                DateTime? @satria.DateTime
}
